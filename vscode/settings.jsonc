    "pstmt",
    "pycache",
    "pyenv",
    "pyinstaller",
    "pyocr",
    "pylance",
    "pylint",
    "pyperclip",
    "pytest",
    "qiita",
    "raycast",
    "realpath",
    "revealjs",
    "rgba",
    "riverpod",
    "runtimes",
    "rustc",
    "saikou9901", // Evilinspector
    "savefig",
    "scrollback",
    "shellsession",
    "skiprows",
    "sonarlint",
    "startuml",
    "stringify",
    "suptitle",
    "synctex",
    "tabbar",
    "tesseract",
    "textlint",
    "Traceback",
    "tqdm",
    "touchbar",
    "twinx",
    "unnecessaries",
    "usernamehw", // Error Lens
    "venv",
    "vsintellicode",
    "wireframe",
    "xlabel",
    "xlim",
    "ylabel",
    "ylim",
    "zenn"
  ],

  // ===========================
  // Language specified settings
  // ===========================

  // insertSpaces: タブをスペースに変換する
  // tabSize: タブとして代入するスペースの数

  // ========== JSON ===========
  "[json]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // ========== JSONC ==========
  "[jsonc]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // ========== HTML ===========
  "[html]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // ========== CSS ============
  "[css]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },

  // ========== Java ==========
  "[java]": {
    "editor.tabSize": 4,
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "redhat.java"
  },

  // ======= JavaScript ========
  "[javascript]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false,
    "editor.formatOnPaste": false,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "never"
    },
    "files.insertFinalNewline": false,
    "javascript.preferences.quoteStyle": "double"
  },

  // ======= TypeScript ========
  "[typescript]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "never"
    }
  },

  // ======= Bun ========
  // Bunのパス
  "bun.runtime": "${userHome}/.local/share/mise/shims/bun",
  // デバッグターミナルに登録
  "bun.debugTerminal.enabled": true,
  // デバッガーがプログラムの最初の行で停止するか
  "bun.debugTerminal.stopOnEntry": false,

  // ======== Python ==========
  "[python]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "charliermarsh.ruff", // prettierはPythonに対応していないため外す
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
    "editor.formatOnType": true
  },

  // ======== Python ==========
  // pytest
  // Python標準のunittestモジュールを無効化
  "python.testing.unittestEnabled": false,
  // ユニットテストツールとしてpytestを有効化
  "python.testing.pytestEnabled": true,
  // ファイル保存時にテスト対象を自動的に探索
  "python.testing.autoTestDiscoverOnSaveEnabled": true,
  // --cov: カバレッジ計測の有効化
  // --cov-report xml: カバレッジ計測レポートをxml形式 (coverage.xml) で出力
  "python.testing.pytestArgs": ["--cov=src", "--cov-report", "xml"],
  // エディタ上のカバレッジ表示設定
  // ガター(ブレークポイント等が表示される場所)でのカバレッジ表示有無(default: true)
  "coverage-gutters.showGutterCoverage": true,
  // エディタ行でのカバレッジ表示有無 (default: false)
  "coverage-gutters.showLineCoverage": false,
  // ルーラーでのカバレッジ表示有無 (default: false)
  "coverage-gutters.showRulerCoverage": false,
  // flake8
  "flake8.args": [
    // E402: Module level import not at top of file
    //  E501: Line too long (82 > 79 characters)
    "--ignore=E402, E501",
    "--max-line-length=119" // E501のデフォルトの79を上書き
  ],
  // 言語サーバ
  "python.languageServer": "Pylance",
  // Pylance
  // メソッドの丸括弧補完を有効にする
  "python.analysis.completeFunctionParens": true,
  // ファイル保存時にテスト対象コードを自動的に探索
  "python.analysis.diagnosticMode": "workspace",
  // デフォルトのインタプリタ
  "python.defaultInterpreterPath": "./.venv/bin/python",

  // ========= Swift ==========
  "[swift]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  // デバッガーのディレクトリ
  "lldb.library": "/Applications/Xcode.app/Contents/SharedFrameworks/LLDB.framework/Versions/A/LLDB",

  // ======== Jupyter =========
  "[jupyter]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },

  // ========= Dart ==========
  "[dart]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "always",
      "source.organizeImports": "always",
      "source.addMissingImports": "always"
    },
    "editor.rulers": [80],
    "editor.selectionHighlight": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": "off"
  },
  "dart.flutterCreateAndroidLanguage": "java",
  "dart.previewFlutterUiGuides": true,
  "dart.previewFlutterUiGuidesCustomTracking": true,
  // クロージングラベルを表示
  "dart.closingLabels": false,

  // ======= Markdown =========
  "[markdown]": {
    "editor.tabSize": 4,
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "on",
      "strings": "on",
      "other": "on"
    },
    "editor.snippetSuggestions": "top",
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  // markdownlint
  "markdownlint.config": {
    // リンターで無視する項目
    "MD007": false, // ul-indent - Unordered list indentation
    "MD010": false, // no-hard-tabs - Hard tabs
    "MD022": false, //blanks-around-headings/blanks-around-headers: Headings should be surrounded by blank lines
    "MD031": false, // blanks-around-fences: Fenced code blocks should be surrounded by blank lines
    "MD032": false // blanks-around-lists: Lists should be surrounded by blank lines
  },
  // markdown-preview-enhanced
  "markdown-preview-enhanced.mermaidTheme": "forest",
  "markdown-preview-enhanced.previewTheme": "vue.css",
  "markdown-preview-enhanced.mathRenderingOption": "MathJax",
  "markdown-preview-enhanced.revealjsTheme": "beige.css",
  "markdown-preview-enhanced.scrollSync": false,
  "markdown.preview.scrollEditorWithPreview": false,
  "markdown.preview.scrollPreviewWithEditor": false,

  // ====== Lua ========
  "Lua.format.defaultConfig": {
    "indent_style": "space",
    "indent_size": "2"
  },

  // ====== LiveServer ========
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.CustomBrowser": "chrome",
  "redhat.telemetry.enabled": true,
  "explorer.confirmDragAndDrop": false,
  "security.workspace.trust.untrustedFiles": "open",

  // ===========================
  // Ignored Settings
  // ===========================
  "settingsSync.ignoredExtensions": [
    "sonarlint.pathToNodeExecutable",
    "markdown-preview-enhanced.plantumlJarPath"
  ],
  "sonarlint.pathToNodeExecutable": "${userHome}/.local/share/mise/shims/node",
  "turboConsoleLog.quote": "'",
  "editor.find.addExtraSpaceOnTop": true,
  "git.openRepositoryInParentFolders": "never",
  "yaml.customTags": [
    "!And",
    "${userHome}/.local/share/mise/shims/bun",
    "!And sequence",
    "!If",
    "!If sequence",
    "!Not",
    "!Not sequence",
    "!Equals",
    "!Equals sequence",
    "!Or",
    "!Or sequence",
    "!FindInMap",
    "!FindInMap sequence",
    "!Base64",
    "!Join",
    "!Join sequence",
    "!Cidr",
    "!Ref",
    "!Sub",
    "!Sub sequence",
    "!GetAtt",
    "!GetAZs",
    "!ImportValue",
    "!ImportValue sequence",
    "!Select",
    "!Select sequence",
    "!Split",
    "!Split sequence"
  ],
  "autopep8.args": ["--max-line-length=150"],
  "lldb.suppressUpdateNotifications": true,
  "cmake.configureOnOpen": true,
  "vsicons.dontShowNewVersionMessage": true,
  "dev.containers.dockerComposePath": "docker compose",
  "peacock.affectActivityBar": true,
  "peacock.affectStatusBar": true,
  "peacock.affectTitleBar": true,
  "peacock.elementAdjustments": {
    "activityBar": "lighten"
  },
  "peacock.favoriteColors": [
    {
      "name": "Angular Red",
      "value": "#dd0531"
    },
    {
      "name": "Azure Blue",
      "value": "#007fff"
    },
    {
      "name": "JavaScript Yellow",
      "value": "#f9e64f"
    },
    {
      "name": "Mandalorian Blue",
      "value": "#1857a4"
    },
    {
      "name": "Node Green",
      "value": "#215732"
    },
    {
      "name": "React Blue",
      "value": "#61dafb"
    },
    {
      "name": "Something Different",
      "value": "#832561"
    },
    {
      "name": "Svelte Orange",
      "value": "#ff3d00"
    },
    {
      "name": "Vue Green",
      "value": "#42b883"
    }
  ],

  "lldb.launch.expressions": "native"
}
