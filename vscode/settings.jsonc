    "latexmk",
    "lat",
    "latlng",
    "lng",
    "longdivider",
    "mathbb",
    "mathcal",
    "matplotlib",
    "metasyntactic",
    "mypy",
    "mytheme",
    "nanmax",
    "nanmin",
    "neovim",
    "noctis",
    "nonstopmode",
    "numpy",
    "nvim",
    "ozawa",
    "plantuml",
    "plottable",
    "println",
