{
  // ===========================
  // General
  // ===========================

  // ファイルの文字コードをUTF-8固定から自動判定に変更
  "files.autoGuessEncoding": true,
  // 保存時に末尾を空行にする
  "files.insertFinalNewline": true,
  // 保存時に最終行以降を削除
  "files.trimFinalNewlines": true,
  // 保存時に行末のホワイトスペースを削除
  "files.trimTrailingWhitespace": true,
  // Explorerで表示しない項目
  "files.exclude": {
    "**/.DS_Store": false,
    "**/.git": true,
    "**/.gitignore": false,
    "**/.classpath": true,
    "**/.gradle": false,
    "**/.vscode": false,
    "**/__pycache__": true,
    "**/.mypy_cache": true,
    "**/.pytest_cache": true,
    "**/.venv": false,
    "**/.dart_tool": true,
    "**/.idea": true,
    "**/.metadata": true,
    "**/poetry.lock": true
  },

  // ===========================
  // Editor
  // ===========================

  // Ctrl+スクロールでエディタ文字をズーム
  "editor.mouseWheelZoom": true,
  // 自動的にフォーマットを実行
  "editor.formatOnSave": true, // 保存時
  "editor.formatOnType": false, // 入力中（改行時）
  "editor.formatOnPaste": true, // ペースト時
  // 入力候補の1番目を最初に選択しておく
  "editor.suggestSelection": "first",
  // StickyScrollを有効化、表示する上限値を設定
  "editor.stickyScroll.enabled": true,
  "editor.stickyScroll.maxLineCount": 5,
  // 誤検出を避けるため、スクリーンリーダー(文字読み上げ)をOFFに変更
  "editor.accessibilitySupport": "off",
  // ペアとなる括弧のガイドを表示
  // true: 常に有効, active: アクティブなペアに対してのみ有効
  "editor.guides.bracketPairs": true,
  // コンソールのフォントサイズ
  "debug.console.fontSize": 12,
  // フォント
  "editor.fontFamily": "'JetBrains Mono', 'Hack Nerd Font', 'Fira Code'",
  // エディタのフォントサイズ
  "editor.fontSize": 12,
  // 1行の高さ
  "editor.lineHeight": 1.35,
  // キャレットを点滅させる
  "editor.cursorBlinking": "smooth",
  // キャレットのアニメーションをスムーズに
  "editor.cursorSmoothCaretAnimation": "on",
  // エディタのキャレットのスタイル
  "editor.cursorStyle": "line", // block",
  // 文字間の距離
  "editor.letterSpacing": 0.1,
  // フォントの合字機能を有効化
  "editor.fontLigatures": true,
  // 制御文字を表示
  "editor.renderControlCharacters": true,
  // ミニマップを非表示
  "editor.minimap.enabled": false,
  // ブレークポイント表示領域 (グリフマージン) を表示
  "editor.glyphMargin": true,
  // 右端で折り返す
  "editor.wordWrap": "on",
  // 選択行の行番号をハイライトする
  "editor.renderLineHighlight": "all",
  // tabの代わりにスペースを挿入
  "editor.insertSpaces": true,
  // HTMLの開始, 終了タグを同時に編集する
  "editor.linkedEditing": true,
  // 選択範囲の角を丸める
  "editor.roundedSelection": true,
  // 最終行よりも下へのスクロールを許可
  "editor.scrollBeyondLastLine": true,

  // ===========================
  // Workbench
  // ===========================

  // プレビューモードを抑制
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  // ファイルツリーにインデントのガイド線を表示 / インデントのサイズを変更する
  "workbench.tree.renderIndentGuides": "always",
  // 起動時にどのページを開くか
  "workbench.startupEditor": "none", // "readme",
  "workbench.tree.indent": 8,
  "workbench.experimental.share.enabled": true,
  "workbench.preferredLightColorTheme": "Evans Dark Theme",
  "workbench.activityBar.location": "top",
  "workbench.colorTheme": "Nord",
  "workbench.preferredDarkColorTheme": "Nord Wave",
  "workbench.colorCustomizations": {
    "[Evans Dark Theme]": {
      "titleBar.activeBackground": "#1C262C",
      "titleBar.activeForeground": "#1C262C"
    },
    "statusBar.background": "#1C262C",
    "statusBar.noFolderBackground": "#1C262C",
    "statusBar.debuggingBackground": "#1C262C"
  },
  "workbench.iconTheme": "material-icon-theme",
  "workbench.editor.empty.hint": "hidden",

  // ===========================
  // Window
  // ===========================

  // 最後のエディタを閉じたときもウィンドウを閉じない
  "window.closeWhenEmpty": false,
  "window.title": "${activeEditorMedium}@${rootName}",
  // コマンドセンターを有効化
  // titleBarStyleが"custom"であることが必要
  "window.commandCenter": false,
  // タイトルバーを修正
  "window.titleBarStyle": "custom",
  // OSの設定に合わせて自動で配色テーマが変更される
  "window.autoDetectColorScheme": true,

  // ===========================
  // Search
  // ===========================

  // 検索結果から除外する項目
  "search.exclude": {
    // ファイルブラウザには表示するが検索から除外する
    "**/node_modules": true,
    "**/package-lock.json": true,
    "**.svg": false
  },

  // 差分の巡回検索を無視する項目 (Gitの差分検索から漏れるので注意)
  "files.watcherExclude": {
    "**/node_modules/*/**": true,
    "**/.dart_tool": true
  },

  // ファイルの削除時に確認する
  "explorer.confirmDelete": false,

  // ===========================
  // Terminal
  // ===========================

  // ターミナルのフォント設定
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.fontWeight": "normal",
  "terminal.integrated.fontFamily": "'Hack Nerd Font'",
  // ターミナルに表示する項目の最大行数
  "terminal.integrated.scrollback": 4000,
  // ターミナルのキャレットアニメーション
  "terminal.integrated.cursorBlinking": true,
  // ターミナルのキャレットのスタイル
  "terminal.integrated.cursorStyle": "block",

  // ===========================
  // Neovim
  // ==========================

  // Neovimのパス
  "vscode-neovim.neovimExecutablePaths.darwin": "/opt/homebrew/bin/nvim",
  // init.vimのパス
  "vscode-neovim.neovimInitVimPaths.darwin": "${userHome}/.config/nvim/init.vim",
  // 拡張機能を独自スレッドで実行しパフォーマンスが向上する、らしい
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },

  // ===========================
  // Update
  // ===========================

  // アップデート時にリリースノートを表示
  "update.showReleaseNotes": false,
  // 拡張機能のRecommendationを停止
  "extensions.ignoreRecommendations": true,
  // タッチバーを無効化
  "keyboard.touchbar.enabled": false,
  "diffEditor.diffAlgorithm": "advanced", // 差分アルゴリズムを変更
  // Breadcrumbsを表示
  "breadcrumbs.enabled": true,
  "update.mode": "manual",

  // devcontainer起動時もデフォルトでインストールする拡張機能
  "dev.containers.defaultExtensions": [
    "eamodio.gitlens", // GitLens
    "mhutchie.git-graph", // Git Graph
    "streetsidesoftware.code-spell-checker", // Spell Checker
    "usernamehw.errorlens", // Error Lens
    "saikou9901.evilinspector", // Evilinspector
    "formulahendry.code-runner", // Code Runner
    "oderwat.indent-rainbow" // indent-rainbow
  ],

  // ===========================
  // Speed up
  // ===========================
  // 高速化のためビルドタスクフェッチをOFFに変更
  "typescript.tsc.autoDetect": "off",
  "grunt.autoDetect": "off",
  "jake.autoDetect": "off",
  "npm.autoDetect": "off",
  "gulp.autoDetect": "off",

  // ===========================
  // Others
  // ===========================
  // サジェスト一覧の初期表示項目設定。IntelliCodeのおまじない?
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

  // ===========================
  // Extensions
  // ===========================
  // Todo Tree
  "todo-tree.general.tags": ["FIXME", "NOTE", "TODO", "CHECK", "DONE"],
  "todo-tree.general.showActivityBarBadge": true,
  "todo-tree.highlights.defaultHighlight": {
    "gutterIcon": true
  },
  "todo-tree.highlights.customHighlight": {
    "TODO": {
      "icon": "bell",
      "foreground": "#eb3055",
      "iconColour": "#eb3055"
    },
    "FIXME": {
      "icon": "flame",
      "foreground": "#ff7700",
      "iconColour": "#ff7700"
    },
    "NOTE": {
      "icon": "bookmark",
      "foreground": "#15a5ad",
      "iconColour": "#15a5ad"
    },
    "DONE": {
      "icon": "check",
      "foreground": "#32CD32",
      "iconColour": "#32CD32"
    }
  },
  // 検索対象から除くディレクトリ
  "todo-tree.filtering.excludeGlobs": ["**/node_modules/*/**", "**/.venv/**"],
  // IndentRainbow
  "indentRainbow.colors": [
    "rgba(255,255,64,0.07)",
    "rgba(127,255,127,0.07)",
    "rgba(255,127,255,0.07)",
    "rgba(79,236,236,0.07)"
  ],
  "indentRainbow.ignoreErrorLanguages": ["*"],

  // Code Runner
  // 使用する言語のみ記載。デフォルト値は code-runner.executorMap の補完で出力できる
  // pythonPath: Python: Select Interpreter で指定した値
  "code-runner.runInTerminal": true,
  "code-runner.ignoreSelection": true,
  "code-runner.executorMap": {
    "javascript": "node",
    "typescript": "bun",
    "java": "cd $workspaceRoot && java $fullFileName", // or "cd $dir && javac $fileName && java $fileNameWithoutExt"
    // $pythonPath: 指定したインタプリタのパス
    // $fullFileName: 開いているファイルの絶対パス
    "python": "$pythonPath -u $fullFileName", // or "python -u",
    "swift": "swift",
    "dart": "dart",
    "go": "go run",
    "rust": "cd $workspaceRoot && cargo run $fullFileName"
  },
  // SonarLint
  "sonarlint.rules": {
    "java:S106": {
      // System.out.printlnに対する警告
      "level": "off"
    },
    "java:S1220": {
      // Move this file to a named package.
      "level": "off"
    },
    "python:S3776": {
      // Refactor this function to reduce its Cognitive Complexity
      "level": "off"
    }
  },

  // ===========================
  // Linter, formatter
  // ===========================

  // スペリングチェックで無視するワード
  "cSpell.userWords": [
    "appbar",
    "arange",
    "autopep8",
    "autolap",
    "azureus",
    "chatgpt",
    "chktex",
    "classpath",
    "colour",
    "consts",
    "cordova",
    "dataframe",
